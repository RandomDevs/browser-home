{
  "manifest_version": 2,
  "name": "Browser Home",
  "version": "1.0.0",
  "description": "A new start page",
  "author": "RandomDevelopers",
  "chrome_url_overrides": {
      "newtab": "index.html"
  },
  "offline_enabled": true,
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
      "16": "icons/icon16.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "bookmarks",
    "*://*/*"
  ],
  "options_ui": {
      "page": "index.html?settings",
      "chrome_style": true
  },
  "browser_action": {
      "default_icon": "icons/icon64.png",
      "default_title": "Browser Home",
      "default_popup": "index.html?settings"
  },
  "applications": {
    "gecko": {
      "id": "simon@ostergren.io"
    }
  }
}
